public class DatoveTypy{
  private static final int CHAR_MAX = Character.MAX_VALUE;
  private static final int CHAR_MIN = Character.MIN_VALUE;
  
  public static void main(String arg[]){
    System.out.println("\n                        # Datove typy JAVA  #                          ");
    System.out.println(" ______________________________________________________________________");
    System.out.println("|           |                      |                    |              |");
    System.out.println("|    Typ    |          MAX         |         MIN        |    Velkost   |");
    System.out.println("|___________|______________________|____________________|______________|");
    System.out.println("|           |                      |                    |              |");
    System.out.println("|  " + Boolean.TYPE + "  |         " + Boolean.TRUE + "         |        " + Boolean.FALSE + "       |       1      |");
    System.out.println("|___________|______________________|____________________|______________|");
    System.out.println("|           |                      |                    |              |");
    System.out.println("|   " + Byte.TYPE + "    |          " + Byte.MAX_VALUE + "         |        " + Byte.MIN_VALUE + "        |       " + Byte.SIZE + "      |");
    System.out.println("|___________|______________________|____________________|______________|");
    System.out.println("|           |                      |                    |              |");
    System.out.println("|   " + Character.TYPE + "    |         " + CHAR_MAX + "        |          " + CHAR_MIN + "         |      " + Character.SIZE + "      |");
    System.out.println("|___________|______________________|____________________|______________|");
    System.out.println("|           |                      |                    |              |");
    System.out.println("|   " + Short.TYPE + "   |         " + Short.MAX_VALUE + "        |       " + Short.MIN_VALUE + "       |      " + Short.SIZE + "      |");
    System.out.println("|___________|______________________|____________________|______________|");
    System.out.println("|           |                      |                    |              |");
    System.out.println("|    " + Integer.TYPE + "    |      " + Integer.MAX_VALUE + "      |     " + Integer.MIN_VALUE + "    |      " + Integer.SIZE + "      |");
    System.out.println("|___________|______________________|____________________|______________|");
    System.out.println("|           |                      |                    |              |");
    System.out.println("|   " + Float.TYPE + "   |     " + Float.MAX_VALUE + "     |       " + Float.MIN_VALUE + "      |      " + Float.SIZE + "      |");
    System.out.println("|___________|______________________|____________________|______________|");
    System.out.println("|           |                      |                    |              |");
    System.out.println("|   " + Long.TYPE + "    | " + Long.MAX_VALUE + "  |" + Long.MIN_VALUE + "|      " + Long.SIZE + "      |");
    System.out.println("|___________|______________________|____________________|______________|");
    System.out.println("|           |                      |                    |              |");
    System.out.println("|  " + Double.TYPE + "   |" + Double.MAX_VALUE + "|      " + Double.MIN_VALUE + "      |      " + Double.SIZE + "      |");
    System.out.println("|___________|______________________|____________________|______________|");
  }
}

